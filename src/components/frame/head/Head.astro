---
import "@styles/base.scss";
import "@styles/type.scss";
import "@styles/sections.scss";
import "@styles/buttons.scss";
import "@styles/forms.scss";

import Favicon from "@components/frame/head/Favicon.astro";

import "@fontsource-variable/noto-sans-jp";

import "@fontsource-variable/mulish";
import "@fontsource/kalam/300.css";
import "@fontsource/kalam/400.css";
import "@fontsource/kalam/700.css";

const { title, metaTitle, description } = Astro.props;

export interface Props {
  title?: string;
  description?: string;
  metaTitle?: string;
}
---

<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>{title}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={description} />
<Favicon />

<style>
  @font-face {
    font-family: "Pandore", sans-serif;
    src:
      url("/fonts/pandore.woff2") format("woff2"),
      url("/fonts/pandore.woff") format("woff");
    font-display: swap;
  }
</style>
