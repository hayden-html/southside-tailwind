---
// import Heading from "@components/tags/Heading.astro";
// import { Image } from "astro:assets";
import { FaChildReaching } from "react-icons/fa6";
import { FaClock } from "react-icons/fa";
import { BsTicketFill } from "react-icons/bs";

const { image, imageAlt, classes, title, duration, age, price } = Astro.props;
---

    <div class={"card shadow-xl text-black bg-white md:flex" + classes}>
      {
        image && (
            <img
              src={image}
              alt={imageAlt}
              class=`image`
            />
        )
      }
      <div class="card-content p-3">
      <h3 class="font-mullish text-h2 md:text-h3">{title}</h3>
      <ul class="text-h6 flex md:flex flex-wrap gap-3 gap-y-0 specs">
        <li>
          <FaChildReaching className="stat-icon" />{age}
        </li>
        <li><FaClock className="stat-icon clock" />{duration}</li>
        <li><BsTicketFill className="stat-icon ticket" />{price}</li>
      </ul>
        <div class="slot md:pr-8">
            <slot  />
        </div>
      </div>
    </div>

    <style lang="scss">

      .card {
        margin: 0 auto;
        @media (min-width: 768px) {
      max-width: 1000px;

    }
      }

      .card-content {
        display: flex;
        flex-direction: column;
        gap: .25rem;
      }

        .image {
            display: block;
            object-fit: cover;
            max-height: 300px;
            max-width: 100%;
            min-width: 100%;
            @media (min-width: 768px) {
              max-height: 500px;
      max-width: 50%;
      min-width: 50%;
    }
        }

        li {
            display: flex;
            gap: .25rem;
            align-items: center;
            margin: 5px 0;
        }

        .stat-icon {
      color: #0055b3;
      margin-bottom: -2px;
    }

    .slot {
        display: flex;
        flex-direction: column;
        gap: .75rem;
    }

    
    </style>