---
const { title } = Astro.props;
---

<section class="upcoming" id="upcoming-courses">
  <h2 class="w-full text-center font-medium font-noto-sans text-h3 mb-1">
    {title}
  </h2>
  <div class="upcoming-cards">
    <slot />
  </div>
</section>

<style lang="scss">
  .upcoming {
    color: #1a1a1a;
    background-color: #f5f5f5;
    padding: 32px;
  }

  .upcoming-cards {
    overflow: auto;
    max-width: fit-content;
    display: flex;
    padding: 16px 1rem 0.5rem;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .upcoming-cards {
      padding: 0rem 1em 1rem;
    }
  }
</style>
