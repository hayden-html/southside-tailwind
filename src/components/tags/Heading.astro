---
const { title, headingLevel, classes } = Astro.props;
const HeadingLevel = headingLevel ? "h" + headingLevel : "h2";
---

{
  (
    <HeadingLevel
      class={
        HeadingLevel == "h1" ? "text-4xl md:text-5xl lg:text-6xl mb-1" : classes
      }
    >
      <slot />
    </HeadingLevel>
  )
}
